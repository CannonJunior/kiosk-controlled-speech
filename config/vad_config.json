{
  "client_vad": {
    "description": "Client-side Voice Activity Detection settings for web browser",
    "enabled": true,
    "sensitivity": 0.002,
    "silence_timeout_ms": 800,
    "speech_start_delay_ms": 300,
    "consecutive_silence_threshold": 3,
    "check_interval_ms": 100,

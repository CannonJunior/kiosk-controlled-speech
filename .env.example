# MCP Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8080

# Audio Configuration
AUDIO_DEVICE_INDEX=0
SPEECH_LANGUAGE=en-US
WHISPER_MODEL=base

# Screen Capture Configuration
SCREENSHOT_INTERVAL=0.5
CAPTURE_FORMAT=png

# Mouse Control Configuration
CLICK_VALIDATION_ENABLED=true
COORDINATE_OFFSET_X=0
COORDINATE_OFFSET_Y=0

# AI Configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=llama3.1

# Data Configuration
KIOSK_DATA_FILE=config/kiosk_data.json
SCREEN_CACHE_SIZE=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/kiosk.log

# Performance Configuration
MAX_RESPONSE_TIME_MS=500
CPU_USAGE_THRESHOLD=5
MEMORY_USAGE_THRESHOLD=512

# Windows Interop Configuration (WSL)
WINDOWS_DISPLAY=:0
WSL_INTEROP_ENABLED=true